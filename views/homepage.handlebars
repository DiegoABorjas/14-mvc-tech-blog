<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    {{#if logged_in}}
      <h2>
        <a href="/post/{{post.id}}">{{post.title}}</a>
      </h2>
    {{else }}
      <h2>
        <a href="/login">{{post.title}}</a>
      </h2>
    {{/if}}
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.content}}
    </p>
  </div>
</div>
{{/each}}