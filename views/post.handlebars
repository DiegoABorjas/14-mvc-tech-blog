<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>

  {{#if logged_in}}
  <form class="new-comment-form">
    <div class="form-group">
      <label for="comment-text">Comment:</label>
      <textarea class="form-input" id="comment-text" name="comment-text"></textarea>
    </div>
    <div class="form-group">
        <button id="comment-submit" type="submit" class="btn btn-primary" data-id="{{id}}">Add comment</button>
    </div>
  </form>
  {{/if}}

  {{> comments post.comments}}

  {{#if isPostOwner}}
    <p>
      <a href="/post/{{id}}/edit" target="_parent"><button class="btn btn-primary">Edit Post</button></a>
    </p>
  {{/if}}
</div>

{{#if logged_in}}
<script src="/js/handleComments.js"></script>
{{/if}}