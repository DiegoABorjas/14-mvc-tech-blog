<div class="text-center">
  <div class="post">
    <h2>{{title}}</h2>
    <p>{{content}}</p>
    <p>Post Created by {{user.name}} on {{format_date date_created}}</p>
  </div>

  {{#if isPostOwner}}
    <p>
      <a href="/post/{{id}}/edit" target="_parent"><button class="btn btn-primary">Edit Post</button></a>
    </p>
  {{/if}}

  {{#if logged_in}}
  <div class="post">
    <form class="new-comment-form">
    <div class="form-group">
      <label for="comment-text">Add Comment:</label>
      <textarea class="form-input" id="comment-text" name="comment-text"></textarea>
    </div>
    <div class="form-group">
        <button id="comment-submit" type="submit" class="btn btn-primary" data-id="{{id}}">Add Comment</button>
    </div>
  </form>
  </div>
  {{/if}}

  <section>
    {{#each comments as |comment|}}
    <div class="post">
      <p>{{comment.text}}</p>
      <p>Comment by {{comment.user.name}} on: {{format_date comment.date_created}}</p>
    </div>
    {{/each}}
  </section>


  <section class="comments">
    {{#each comments.entry as |comment| }}
    <p>{{comment.text}}</p>
    {{/each}}
  </section>

</div>

{{#if logged_in}}
<script src="/js/handleComments.js"></script>
{{/if}}